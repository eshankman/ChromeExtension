{
  "manifest_version": 3,
  "name": "PricePal",
  "version": "0.1",
  "description": "Hover to compare product prices across Amazon and Walmart.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": [
        "*://www.amazon.com/*",
        "*://www.walmart.com/*"
      ],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "action": {
    "default_popup": "pricepal.html",
    "default_icon": {
      "128": "pricepal2.png"
    },
    "icons": {
      "128": "pricepal2.png"
    }
  }
}